<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/newsList">

    <fragment
        android:id="@+id/newsList"
        android:name="com.example.mvvmnetwork.ui.NewsListFragment"
        android:label="fragment_news_list"
        tools:layout="@layout/fragment_news_list" >
        <action
            android:id="@+id/action_newsList_to_articleFragment"
            app:destination="@id/articleFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <argument android:name="article_url" app:argType="string" app:nullable="true" android:defaultValue="https://scitechdaily.com/beating-parkinsons-intense-exercise-regimen-helps-slow-disease-progression/"/>
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.example.mvvmnetwork.ui.ArticleFragment"
        android:label="ArticleFragment" />
</navigation>